{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
		"camelcase": 0,
		"no-use-before-define": 0,
		"no-spaced-func": 0,
		"no-underscore-dangle": 0,
		"new-cap": 0,
		"no-console": 0,
		// warn on unused variables
		"no-unused-vars": 2,
		// enforce EOF line rules
		"eol-last": 2,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1,
				"maxEOF": 1
			}
		],
		"no-extra-bind": 2
	}
	// "plugins": [
	// 	"backbone"
	// ]
}